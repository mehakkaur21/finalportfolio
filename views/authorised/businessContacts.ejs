<%- include ../partials/header.ejs %>
  <%- include ../partials/main_nav.ejs %>
    <%- include ../partials/title.ejs %>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
      
      <div class="business-contacts-container">
        <div class="container pt-5 pb-5">
          <h1 style="text-align: left; text-transform:uppercase;letter-spacing:2px">Contacts</h1>
          <br>
          <%if(message){%>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              <strong><%=message%></strong>
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <%}%>
          <%if(contacts.length>0){%>
            <div class="table-responsive">
              <table class="table table-bordered ">
                <thead class="thread-dark">
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Contact</th>
                    <th scope="col" class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% var i=0%>
                    <%contacts.forEach((contact)=>{%>
                      <%i++%>
                      <tr>
                        <td><%= i%></td>
                        <th scope="row">
                          <%= contact.name%>
                        </th>
                        <td>
                          <%= contact.email%>
                        </td>
                        <td>
                          <%= contact.contactNumber%>
                        </td>
                        <td class="text-end">
                          <a href="/viewContact/<%=contact._id%>" class="btn  btn-primary btn-small"><i
                              class="bi bi-eye"></i>
                            View</a>
                          <a href="/editContact/<%=contact._id%>" class="btn btn-secondary btn-small"><i
                              class="bi bi-pencil"></i>
                            Edit</a>
                          <a href="/deleteContact/<%=contact._id%>" class="btn btn-danger btn-small"><i
                              class="bi bi-person-x"></i>
                            Delete</a>
                        </td>
                      </tr>
                      <%})%>
                </tbody>
              </table>

            </div>
            <%}else{%>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>No Contacts Added</strong>
              </div>
              <%}%>
        </div>

      </div>
      <%- include ../partials/footer.ejs %>